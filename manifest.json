{
    "manifest_version": 3,
    "name": "ClipHost",
    "version": "1.0",
    "icons": {
        "16": "icons/host16.png",
        "48": "icons/host48.png",
        "128": "icons/host128.png"
    },
    "description": "Clips hostname from selected tab's address bar and places it into your clipboard.",
    "action": {
        "default_title": "ClipHost",
        "default_popup": "popup.html",
        "default_icon": "icons/host48.png"
    },
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite"
    ]
}

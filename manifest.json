{
    "name": "ClipHost",
    "version": "0.4",
    "icons": {  "16": "icons/host16.png",
                "48": "icons/host48.png",
                "128": "icons/host128.png"
        },
    "description": "Clips hostname from selected tab's address bar and places it into your clipboard.",        
    "browser_action": {
        "default_title": "ClipHost", 
        "popup": "popup.html",
        "default_icon": "icons/host48.png"
    },
    "options_page": "options.html",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs"
    ]
}
